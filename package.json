{
  "name": "@virtuoso.dev/monorepo",
  "private": true,
  "scripts": {
    "ci": "npm run ci-setup && npm run build && npm run typecheck && npm run lint && npm run test && npm run e2e",
    "ci-setup": "npm run ci-setup --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "e2e": "npm run e2e --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build-virtuoso.dev": "npm run build --workspace @virtuoso.dev/virtuoso.dev",
    "release": "npm run build --workspaces --if-present && npx @changesets/cli publish",
    "changeset-add": "npx @changesets/cli add",
    "dev:docs": "npm run dev --workspace  @virtuoso.dev/virtuoso.dev#dev"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12"
  },
  "packageManager": "^npm@10.9.0",
  "devEngines": {
    "packageManager": {
      "name": "npm",
      "version": ">=10.9",
      "onFail": "error"
    },
    "runtime": {
      "name": "node",
      "version": "^22.19.0",
      "onFail": "error"
    }
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
