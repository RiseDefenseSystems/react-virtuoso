{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "typecheck": {
      "dependsOn": [
        "^build",
        "^typecheck"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build",
        "^lint"
      ]
    },
    "test": {
      "dependsOn": [
        "^build",
        "^test"
      ]
    },
    "e2e": {
      "dependsOn": [
        "^build",
        "^e2e"
      ]
    },
    "build": {
      "env": [
        "PADDLE_ENVIRONMENT",
        "PADDLE_TOKEN",
        "PADDLE_STANDARD_PRICE_ID",
        "PADDLE_PRO_PRICE_ID"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "ci-setup": {
      "dependsOn": [
        "^ci-setup"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
